<resources>
	<style name="Theme.ShoppingList" parent="@android:style/Theme.Light" >
		<item name="background">?android:background</item>
		<item name="backgroundPadding">0</item>
		<item name="divider">0</item>
		<item name="textTypeface"></item>
		<item name="textUpperCaseFont">false</item>
		<item name="textSizeSmall">18</item>
		<item name="textSizeMedium">23</item>
		<item name="textSizeLarge">28</item>
		<item name="textColor">#FFFFFFFF</item>
		<item name="textColorPrice">#FFCCCCCC</item>
		<item name="textColorChecked">#FFCCCCCC</item>
		<item name="textStrikethroughChecked">false</item>
		<item name="textSuffixUnchecked">@string/empty</item>
		<item name="textSuffixChecked">@string/empty</item>
		<item name="showCheckBox">true</item>
	</style>

	<style name="Theme.ShoppingList.Classic" parent="Theme.ShoppingList" >
		<item name="background">@drawable/shoppinglist01d</item>
		<item name="backgroundPadding">-1</item>
		<item name="divider">-1</item>
		<item name="textTypeface">fonts/AnkeHand.ttf</item>
		<item name="textUpperCaseFont">false</item>
		<item name="textSizeSmall">15</item>
		<item name="textSizeMedium">20</item>
		<item name="textSizeLarge">25</item>
		<item name="textColor">#FF000000</item>
		<item name="textColorPrice">#FF444444</item>
		<item name="textColorChecked">#FF008800</item>
		<item name="textStrikethroughChecked">true</item>
		<item name="showCheckBox">false</item>
	</style>

	<style name="Theme.ShoppingList.Android" parent="Theme.ShoppingList">
		<item name="background">@drawable/theme_android</item>
		<item name="backgroundPadding">0</item>
		<item name="divider">0</item>
		<item name="textTypeface">fonts/Crysta.ttf</item>
		<item name="textUpperCaseFont">true</item>
		<item name="textSizeSmall">21</item>
		<item name="textSizeMedium">26</item>
		<item name="textSizeLarge">31</item>
		<item name="textColor">#FFFF8866</item>
		<item name="textColorPrice">#FFCCCCCC</item>
		<item name="textColorChecked">#FF00FF00</item>
		<item name="textStrikethroughChecked">false</item>
		<item name="textSuffixChecked">@string/suffix_checked</item>
		<item name="showCheckBox">false</item>
	</style>
	
	<!-- We use OI Shopping List themes also for OI Notepad,
	     because the Notepad attributes are a subset of the 
	     OI Shopping List attributes.
	     If additional attributes were required, they could
	     be added here. -->
	<style name="Theme.Notepad.Classic" parent="Theme.ShoppingList.Classic" >
	</style>

	<style name="Theme.Notepad.Android" parent="Theme.ShoppingList.Android">
	</style>
	     
</resources>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.openintents">

    <!-- required for ContentBrowserView (in order to view tagged people) -->
	<uses-permission id="android.permission.READ_CONTACTS" android:name="android.permission.READ_CONTACTS"/>

	<application android:icon="@drawable/openintents002a">
		<!-- Providers -->
		<provider android:name=".locations.LocationsProvider"
			android:authorities="org.openintents.locations" />
		<provider android:name=".tags.TagsProvider"
			android:authorities="org.openintents.tags" />
		<provider android:name=".shopping.ShoppingProvider"
			android:authorities="org.openintents.shopping" />
		<provider android:name=".tags.content.ContentIndexProvider"
			android:authorities="org.openintents.contentindices" />
		

		<provider android:name=".news.NewsProvider"
			android:authorities="org.openintents.news" />						
		<provider android:name=".hardware.HardwareProvider"
			android:authorities="org.openintents.hardware" />
			
		<!-- Main activity -->
		<activity android:name=".main.OpenIntents"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".main.About"
			android:label="@string/about_openintents">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<!-- <category
					android:name="android.intent.category.LAUNCHER" />   -->
			</intent-filter>
		</activity>

		<!-- Locations activity -->
		<activity android:name=".locations.LocationsView"
			android:label="@string/list_of_locations">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<!--  <category
					android:name="android.intent.category.LAUNCHER" />  -->
			</intent-filter>
		</activity>

		<!-- Location Map activity -->
		<activity android:name=".locations.LocationsMapView"
			android:label="@string/locations_map">
		</activity>

		<!-- Tags activity -->
		<activity android:name=".tags.TagsView"
			android:label="@string/list_of_tags">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<!--  <category
					android:name="android.intent.category.LAUNCHER" />  -->
			</intent-filter>
			<intent-filter>
				<action android:name="org.openintents.action.TAG" />
				<category
					android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.openintents.cursor.dir/tag" />
			</intent-filter>
			<intent-filter>
				<action android:name="org.openintents.action.TAG"
					android:label="tag" />
				<category
					android:name="android.intent.category.ALTERNATIVE" />
				<data android:scheme="content" />
			</intent-filter>
			<intent-filter>
				<action android:name="org.openintents.action.TAG"
					android:label="tag" />
				<category
					android:name="android.intent.category.SELECTED_ALTERNATIVE" />
				<data android:scheme="content" />
			</intent-filter>
		</activity>

		<!-- android:icon="@drawable/directory" -->
		<activity android:name=".tags.content.ContentBrowserView"
			android:label="@string/content_browser"
			android:icon="@drawable/folder">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category
					android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.openintents.cursor.dir/tag" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category
					android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.openintents.cursor.item/tag" />
			</intent-filter>
		</activity>

		<activity android:name=".tags.TagsAddView"
			android:label="@string/tags_add_tag" android:theme="@android:style/Theme.Dialog">
			<intent-filter android:icon="@drawable/folder">			    
				<action android:name="org.openintents.action.TAG" />
				<category
					android:name="android.intent.category.DEFAULT" />
				<category
					android:name="android.intent.category.ALTERNATIVE" />
				<category
					android:name="android.intent.category.SELECTED_ALTERNATIVE" />
				<data android:mimeType="vnd.openintents.cursor.dir/tag" />
			</intent-filter>

			<intent-filter android:icon="@drawable/folder">			    
				<action android:name="android.intent.action.INSERT" />
				<category
					android:name="android.intent.category.DEFAULT" />
				<category
					android:name="android.intent.category.ALTERNATIVE" />
				<category
					android:name="android.intent.category.SELECTED_ALTERNATIVE" />
				<data android:mimeType="vnd.openintents.cursor.dir/tag" />
			</intent-filter>
		</activity>

		<activity android:name=".tags.content.PackageList">
			<intent-filter>
				<action android:name="android.intent.action.PICK" />
				<category
					android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.openintents.cursor.dir/contentdirectory" />
			</intent-filter>
		</activity>
		
		<activity android:name=".tags.content.PackageAdd" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.INSERT" />
                <category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.openintents.cursor.dir/contentdirectory" />
            </intent-filter>
        </activity>
        

		<!-- Shopping activity -->
		<activity android:name=".shopping.ShoppingView"
			android:label="@string/shopping_list">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.DEFAULT" />
				<data
					android:mimeType="vnd.openintents.cursor.dir/shopping.list" />
				<!--  <category
					android:name="android.intent.category.LAUNCHER" />  -->
			</intent-filter>
		</activity>

		<!-- Ma.Gnolia Tags activity -->
		<activity android:name=".tags.MagnoliaSettings"
			android:label="MagnoliaSettings">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.openintents.cursor.dir/tag"/>               					
				<!--  <category
					android:name="android.intent.category.LAUNCHER" />  -->              					
			</intent-filter>
		</activity>		
		<activity android:name=".tags.MagnoliaTagging"
			android:label="Tag in Ma.Gnolia.com">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.openintents.cursor.dir/tag"/>               					
				<!--  <category
					android:name="android.intent.category.LAUNCHER" />  -->              					
			</intent-filter>
		</activity>	

		<!-- SensorSimulator -->
		<activity android:name=".hardware.SensorSimulatorView"
			android:label="@string/sensorsimulator">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT" /> 
				<data android:mimeType="vnd.openintents.cursor.dir/hardware.preference"/>          					
			</intent-filter>
		</activity>
		
		
		<!-- Magnolia -->
		<activity android:name=".tags.MagnoliaSettings"
			android:label="MagnoliaSettings"><!-- TODO move to Resource ! -->
		</activity>
		<activity android:name=".tags.MagnoliaTagging"
			android:label="MagnoliaTagging"><!-- TODO move to Resource ! -->
		</activity>
		
	</application>	 
</manifest>

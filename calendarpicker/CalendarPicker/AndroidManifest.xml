<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.openintents.calendarpicker"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">

        <activity android:name="org.openintents.calendarpicker.activity.CalendarPickerActivity"
        	android:label="Calendar Picker"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        
            <intent-filter>
				<action android:name="android.intent.action.PICK"/>

				<category android:name="android.intent.category.DEFAULT"/>
				<data android:mimeType="text/datetime"/>
		    </intent-filter>

	        <intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<action android:name="android.intent.action.PICK"/>


				<category android:name="android.intent.category.DEFAULT"/>
				<data android:mimeType="vnd.android.cursor.dir/vnd.org.openintents.event"/>
			</intent-filter>
	    </activity>

        
		<activity android:name="org.openintents.calendarpicker.activity.EventListActivity"
		android:theme="@android:style/Theme.Translucent"/>

		<activity android:name="org.openintents.calendarpicker.activity.YearsActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>




    </application>
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="4"/>

</manifest> 
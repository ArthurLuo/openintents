 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/bubbleframe_lightorange"
    	android:gravity="top"
    	android:layout_marginTop="20dip"> 
	    <LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	>
	    	<LinearLayout
	    		android:orientation="vertical"
	    		android:layout_width="wrap_content"
	    		android:layout_height="fill_parent"
	    		android:gravity="center"
	    		>
				<ImageButton id="@+id/image"
			    	android:layout_width="70dip"
			    	android:layout_height="70dip"
			    	android:scaleType="fitCenter"    
			    	android:src="@drawable/boy_1" 
			    	android:layout_marginRight="10dip" />
			    <!-- 
		    	<ImageButton id="@+id/callperson"
				    	android:layout_width="70dip"
				    	android:layout_height="40dip"
				    	android:layout_marginTop="5dip"   
		    			android:src="@android:drawable/sym_action_call" /> -->
		    </LinearLayout>
		    <LinearLayout
		    	android:orientation="vertical"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content">
		    	<LinearLayout
		    		android:orientation="horizontal"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
			    	<TextView  
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content" 
					    android:text="@string/name"
					    />
			    	<AutoCompleteTextView id="@+id/name"
			            android:completionThreshold="1"
			            android:completionHint="@string/autocomplete_hint"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"/>
			    </LinearLayout>
			    
			    <LinearLayout
		    		android:orientation="horizontal"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
			    	<RadioGroup id="@+id/radio_mf"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        android:layout_marginTop="3dip"
				        >
				        <RadioButton id="@+id/radio_m"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/male" 
				            />
				        <RadioButton id="@+id/radio_f"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/female" />
				    </RadioGroup>
				    
				    <TextView  
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content" 
					    android:text="@string/age"
					    />
					<EditText id="@+id/age"
						android:layout_width="50dip"
						android:layout_height="wrap_content"
						android:layout_weight="1"/>
					
			    </LinearLayout>
			     
			    <LinearLayout
		    		android:orientation="horizontal"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
			    	<TextView  
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content" 
					    android:text="@string/personality"
					    />
					<Spinner id="@+id/personality"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" />
			    </LinearLayout>
			    
			    
			    <LinearLayout
		    		android:orientation="horizontal"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
			    	<TextView  
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content" 
					    android:text="@string/occasion"
					    />
					<Spinner id="@+id/occasion"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						/>
			    </LinearLayout>
			    
		    </LinearLayout>
		  </LinearLayout>
	 </LinearLayout>
	 <LinearLayout
	 	android:orientation="vertical"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_marginRight="10dip"
	  	android:layout_marginLeft="30dip"
	  	android:layout_marginTop="5dip"
	  	android:layout_marginBottom="20dip"
	  	>
	  	
		<Button id="@+id/search"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 				
			android:text="@string/search" 
			android:layout_gravity="center_horizontal"
			android:padding="10dip"
			/>
	</LinearLayout>
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/recommendation"
	    android:layout_marginLeft="20dip"
	    />
	<LinearLayout id="@+id/results"
   		android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip">
   	</LinearLayout>
	<LinearLayout
   		android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
    	android:layout_marginTop="10dip">
	    <TextView  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="@string/selection"
		    android:layout_marginLeft="10dip"
		    />
			
	    <EditText id="@+id/selection"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			/>
	</LinearLayout>
    <LinearLayout
   		android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip">
	    <Button id="@+id/button_add"
	        android:text="@string/add_item_to"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dip"
	        android:layout_gravity="left"
	        android:layout_marginRight="20dip"
	        />
	    
	    <!-- 
	    <Spinner id="@+id/spinner_listfilter"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		 -->
			
	    <Button id="@+id/button_view"
	        android:text="@string/view_shopping_list"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dip"
	        android:layout_gravity="right"
	        />
	</LinearLayout>
</LinearLayout>

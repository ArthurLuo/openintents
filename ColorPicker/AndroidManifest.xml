<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.openintents.colorpicker" android:versionCode="10000" android:versionName="1.0.0">
	<!-- History:
	1.0.0       [10000]: 2010-05-30 -->
	
	<uses-sdk android:minSdkVersion="2" android:targetSdkVersion="4"/>
	<supports-screens android:smallScreens="true"
			android:normalScreens="true"
			android:largeScreens="true" />

    <application android:icon="@drawable/icon_colorpicker" android:label="@string/app_name">
        
        <activity android:name=".ColorPickerActivity"
                  android:label="@string/color_picker">
            <intent-filter>
                <action android:name="org.openintents.action.PICK_COLOR" />
				<category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
                
    </application>
</manifest> 
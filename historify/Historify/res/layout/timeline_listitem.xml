<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="4dip"
    >

<View
	android:id="@+id/timeline_listitem_vLeftSpacer1"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="2"
 />

<View
	android:id="@+id/timeline_listitem_vLeftSpacer2"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="2"
 />
 
 <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:layout_weight="1"
    style="@style/ListItem.TimeLine"    
    >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/timeline_listitem_imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="32dip"
        android:scaleType="fitStart"
        android:layout_marginRight="6dip"
        android:src="@drawable/source_default" />    
    
	<TextView
		android:id="@+id/timeline_listitem_txtDate"
		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
    	android:gravity="right"	    
	    style="@style/Label"
	    android:text="(Date)"
	/>
</LinearLayout>
	 
<TextView
		android:id="@+id/timeline_listitem_txtMessage"
		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:minLines="2"
	    style="@style/Label"
	    android:text="Detailed message."
/> 		 	 
</LinearLayout>	 

<View
	android:id="@+id/timeline_listitem_vRightSpacer1"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="2"
 />

<View
	android:id="@+id/timeline_listitem_vRightSpacer2"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="2"
 />

    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Fragment.Root" parent="android:Theme">
		<item name="android:background">@color/background_light</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
	</style>
    
    <style name="ListView" parent="android:Theme">
		<item name="android:cacheColorHint">@color/background_transparent</item>
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">0dip</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item> 
	</style>
    
    <style name="ListView.NoDivider" parent="ListView">
		<item name="android:divider">@null</item>
	</style>
	
	<style name="ListItem.SingleLine" parent="android:Theme">
		<item name="android:padding">16dip</item>
    	<item name="android:textSize">28dip</item>
    	<item name="android:textColor">@color/foreground_light</item>
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="ListItem.Iconified.FirstLine" parent="android:Theme">
	    <item name="android:ellipsize">marquee</item>
    	<item name="android:singleLine">true</item>
		<item name="android:textSize">18dip</item>
    	<item name="android:textColor">@color/foreground_light</item>
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="ListItem.Iconified.SecondLine" parent="android:Theme">
		<item name="android:ellipsize">marquee</item>
    	<item name="android:singleLine">true</item>
    	<item name="android:textColor">@color/foreground_light</item>
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="Label" parent="android:Theme">
    	<item name="android:textColor">@color/foreground_light</item>
    	<item name="android:padding">2dip</item>
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item> 
	</style>

	<style name="Label.Bold" parent="Label">
    	<item name="android:textStyle">bold</item>
	</style>
	
	<style name="Label.Big.Centered" parent="Label">
    	<item name="android:textSize">24sp</item>
    	<item name="android:gravity">center_horizontal</item>
	</style>
	
	    	
	<style name="EditText" parent="android:Theme">
    	<item name="android:layout_margin">2dip</item>
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item> 
	</style>

	<style name="Button" parent="android:Theme">
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item> 
	</style>

	<style name="Button.Margined" parent="Button">
    	<item name="android:layout_margin">6dip</item>
	</style>

    <style name="ActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="ActionBarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/foreground_dark</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
	    	
</resources>
